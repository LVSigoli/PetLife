<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEditPetNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Pet"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/etPetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o nome do pet"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEditPetColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cor do Pet"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/etPetColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a cor do pet"
        android:textSize="16sp" />




    <TextView
        android:id="@+id/tvEditPetBirthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de nascimento do Pet"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/etPetBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a data no formato dd/mm/aaaa"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tvEditPetSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho do Pet"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerSizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvEditPetSpeciesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EspÃ©cie do Pet"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="16dp" />
</LinearLayout>
